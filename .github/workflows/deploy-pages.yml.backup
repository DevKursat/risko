name: Deploy Risko Platform to GitHub Pages

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Prepare frontend for deployment
        run: |
          # Copy frontend files to build directory
          mkdir -p _site
          cp -r frontend/* _site/
          
          # Rename app.html to index.html for the web application
          mv _site/app.html _site/index.html
          
          # Create a simple redirect from the old static site
          echo '<!DOCTYPE html>
          <html>
          <head>
            <meta charset="utf-8">
            <title>Risko Platform - Yönlendiriliyor...</title>
            <meta http-equiv="refresh" content="0; url=./index.html">
            <script>window.location.href = "./index.html";</script>
          </head>
          <body>
            <p>Risko Platform uygulamasına yönlendiriliyorsunuz...</p>
            <p><a href="./index.html">Buraya tıklayın</a> eğer otomatik yönlendirme çalışmazsa.</p>
          </body>
          </html>' > _site/app-redirect.html
          
          # Update config for GitHub Pages
          sed -i 's|API_BASE_URL: '"'"'http://localhost:8000'"'"'|API_BASE_URL: '"'"'https://your-backend-api.herokuapp.com'"'"'|g' _site/config.js
          sed -i 's|DEMO_MODE: false|DEMO_MODE: true|g' _site/config.js
          sed -i 's|ENVIRONMENT: '"'"'production'"'"'|ENVIRONMENT: '"'"'github-pages'"'"'|g' _site/config.js

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v2

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v3