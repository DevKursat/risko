# Runtime
ENVIRONMENT=production
LOG_LEVEL=INFO

# Security
SECRET_KEY=change-me-please-to-a-very-long-random-string

# Database (Supabase Postgres URI)
# Example: postgresql://postgres:<password>@db.<id>.supabase.co:5432/postgres?sslmode=require
POSTGRES_USER=risko
POSTGRES_PASSWORD=risko
POSTGRES_DB=risko

# When running with Docker Compose (local dev), set DATABASE_URL to point to the db service:
# Example:
DATABASE_URL=postgresql://risko:risko@db:5432/risko

# CORS and Frontend
# Use JSON array format to be compatible with pydantic-settings parsing
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]
FRONTEND_BASE_URL=http://localhost:8000/app

# B2B API keys (comma separated). Example: demo-api-key-123,test-api-key-456
B2B_API_KEYS=demo-api-key-123,test-api-key-456

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=
# Optional if verifying Supabase JWT locally (HS256)
SUPABASE_JWT_SECRET=
