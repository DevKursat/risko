# Runtime
ENVIRONMENT=production
LOG_LEVEL=INFO

# Auth
AUTH_PROVIDER=supabase
SECRET_KEY=replace-with-random

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=

# Database (optional)
DATABASE_URL=postgresql://postgres:password@host:5432/postgres?sslmode=require

# Frontend/CORS
FRONTEND_BASE_URL=https://devkursat.github.io/risko/
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["https://devkursat.github.io","http://localhost:8000"]

# Map & Geocoding
MAP_PROVIDER=leaflet
TILE_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png
TILE_ATTRIBUTION=Â© OpenStreetMap contributors
NOMINATIM_URL=https://nominatim.openstreetmap.org
# For MapLibre (optional)
MAP_STYLE_URL=
MAPTILER_API_KEY=# Risko Platform Environment Configuration

# Application Settings
PROJECT_NAME=Risko Platform
VERSION=1.0.0
API_V1_STR=/api/v1

# Database Configuration
# Set your Postgres/Supabase DATABASE_URL (example shown below)
DATABASE_URL=postgresql://postgres:password@host:5432/postgres?sslmode=require

# Automatically apply Alembic migrations on container start?
# Set to 'true' to run `alembic upgrade head` during startup (useful for dev/staging).
# In production you may want to set this to 'false' and run migrations manually from CI/CD.
APPLY_MIGRATIONS=true

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# API Configuration
API_KEY_HEADER=X-API-Key

# CORS/Hosts Settings
# ALLOWED_HOSTS=app.risko.com,risko.com
# CORS_ORIGINS=https://risko.com,https://app.risko.com

# Frontend
# FRONTEND_BASE_URL=https://devkursat.github.io/risko

# Security
SECRET_KEY=change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# External Services
# GEOCODING_API_KEY=your-geocoding-api-key
# GEOCODING_SERVICE_URL=https://api.geocoding-service.com

# SMTP (optional for sending password reset emails)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USERNAME=youruser
# SMTP_PASSWORD=yourpass
# SMTP_TLS=true

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=logs/risko.log

# Rate Limiting (requests per hour)
# PUBLIC_RATE_LIMIT=100
# PREMIUM_RATE_LIMIT=1000
# B2B_BASIC_RATE_LIMIT=1000
# B2B_PREMIUM_RATE_LIMIT=10000
